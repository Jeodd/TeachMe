<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>TeachMe</display-name>
    <servlet>
        <servlet-name>Apply</servlet-name>
        <servlet-class>fr.utbm.TeachMe.controller.ApplyServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddClient</servlet-name>
        <servlet-class>fr.utbm.TeachMe.controller.AddClient</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>FilterByDate</servlet-name>
        <servlet-class>fr.utbm.TeachMe.controller.FilterByDate</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>FilterByLocation</servlet-name>
        <servlet-class>fr.utbm.TeachMe.controller.FilterByLocation</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Apply</servlet-name>
        <url-pattern>/applyServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddClient</servlet-name>
        <url-pattern>/addClient</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>FilterByDate</servlet-name>
        <url-pattern>/filterByDate</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>FilterByLocation</servlet-name>
        <url-pattern>/filterByLocation</url-pattern>
    </servlet-mapping>
  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>
</web-app>
